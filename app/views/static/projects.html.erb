<div id="oContainer" >
  <% @projects.each do |project| %>
    <div id= "iContainer">
      <h1><%= project.name %></h1>
      <p><%= project.description %></p>
      <p><%= project.tech %></p>
      <% if project.gif %>
        <img src= "<%=project.gif%>" width="560" height="300px" alt="paddysnake" />
      <% else %>
          <p>Sorry, no video available</p>
      <% end %>
      <% if project.code %>
        <%# Front and backend for code %>
        <% if project.backend %>
        <p><%= link_to "Frontend Code", project.code, target: "_blank" %><%= " | "%><%= link_to "Backend Code", project.backend, target: "_blank" %></p>
        <% else %>
          <p><%= link_to "CODE", project.code, target: "_blank" %></p>
        <% end %>
      <% else %>
        <p>Sorry, no code available</p>
      <% end %>
      <% if project.demo %>
        <p><%= link_to "DEMO", project.demo, target: "_blank" %></p>
      <% else %>
          <p>Sorry, no demo available</p>
      <% end %>
      <% if project.back %>
        <p><%= link_to "START SERVER", project.back, target: "_blank" %></p>
      <% end %>
      <% if project.video %>
        <p><%= link_to "VIDEO", project.video, target: "_blank" %></p>
      <% end %>
    </div>
  <% end %>
</div>

